<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/dm5dp"
    app:cardCornerRadius="@dimen/dm5dp">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="7">
        <ImageView
            android:padding="@dimen/dm5dp"
            android:layout_width="@dimen/dm0dp"
            android:layout_weight="2"
            android:layout_height="80dp"
            android:src="@drawable/phone"
            />
        <LinearLayout
            android:layout_width="@dimen/dm0dp"
            android:layout_weight="4"
            android:layout_height="80dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvNameContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/nameContact"
                android:layout_margin="@dimen/dm5dp"
                />
            <TextView
                android:layout_margin="@dimen/dm5dp"
                android:id="@+id/tvPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/phoneNumber"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chkDelete"
                android:layout_gravity="center_horizontal|center_vertical"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
